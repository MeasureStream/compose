{
  "name": "ttn-mqtt-source",
  "config": {
    "connector.class": "io.lenses.streamreactor.connect.mqtt.source.MqttSourceConnector",
    "tasks.max": "1",
    "connect.mqtt.hosts": "${MQTT_BROKER}",
    "connect.mqtt.username": "${MQTT_USERNAME}",
    "connect.mqtt.password": "${MQTT_PASSWORD}",
    "connect.mqtt.client.id": "kafka-backend",
    "connect.mqtt.clean": "true",
    "connect.mqtt.service.quality": "1",
        
    "connect.mqtt.kcql": "INSERT INTO fport1 SELECT * FROM v3/${MQTT_USERNAME}/devices/+/up WHERE f_port = 1; \
                           INSERT INTO fport2 SELECT * FROM v3/${MQTT_USERNAME$}/devices/+/up WHERE f_port = 2",
    

    "connect.progress.enabled": "true",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    
    "transforms": "ExtractFPort",
    "transforms.ExtractFPort.type": "org.apache.kafka.connect.transforms.ExtractField$Value",
    "transforms.ExtractFPort.field": "uplink_message.f_port"
  }
}

